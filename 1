#include "stdafx.h"
#include <iostream>
using namespace std;
int m[30][30], m1[30][30];
int check(int x, int y,int m_[30][30]) {
	int i = 0;
	if (m_[x+1][y-1] == 1 && x!=5 && y!=0) { i++; }
	if (m_[x-1][y+1] == 1 && x != 0 && y != 5) { i++; }
	if (m_[x+1][y] == 1 && x != 5) { i++; }
	if (m_[x][y+1] == 1 && y != 5) { i++; }
	if (m_[x+1][y+1] == 1 && x != 5 && y != 5) { i++; }
	if (m_[x-1][y] == 1 && x != 0) { i++; }
	if (m_[x][y-1] == 1 && y != 0) { i++; }
	if (m_[x-1][y-1] == 1 && x != 0 && y != 0) { i++; }
	return i;
}
int main()
{
	int a;
	for (int i = 0;i < 30;i++) {
		for (int j = 0;j < 30;j++) {
			m[i][j] = rand() % 2;

		}
	}

	for (int i = 0;i < 30;i++) {
		for (int j = 0;j < 30;j++) {
			cout << m[i][j] << " ";
		}
		cout << endl;
	}

	for (int n = 0;n < 30;n++) {
		Sleep(500);
		system("cls");
		for (int i = 0;i < 30;i++) {
			for (int j = 0;j < 30;j++) {
				a = check(i, j, m);
				if (a == 3) { m1[i][j] = 1; }
				if (m[i][j] == 1 && (a == 2 || a == 3)) { m1[i][j] = 1; }
				if (a < 2 || a > 3) { m1[i][j] = 0; }
				cout << m1[i][j] << " ";
			}
			cout << endl;
		}
		for (int i = 0;i < 30;i++) {
			for (int j = 0;j < 30;j++) {
				m[i][j] = 0;

			}
		}
		Sleep(500);
		system("cls");
		for (int i = 0;i < 30;i++) {
			for (int j = 0;j < 30;j++) {
				a = check(i, j, m1);
				if (a == 3) { m[i][j] = 1; }
				if (m1[i][j] == 1 && (a == 2 || a == 3)) { m[i][j] = 1; }
				if (a < 2 || a > 3) { m[i][j] = 0; }
				cout << m[i][j] << " ";
			}
			cout << endl;
		}
		for (int i = 0;i < 30;i++) {
			for (int j = 0;j < 30;j++) {
				m1[i][j] = 0;

			}
		}
	}
	return 0;
}
